<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.onurb.bmi_calculator.ResultActivity">

    <TextView
        android:text="BMI Values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="62dp"
        android:id="@+id/header" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_alignLeft="@+id/header"
        android:layout_alignStart="@+id/header"
        android:layout_marginTop="19dp"
        android:id="@+id/underweight"
        android:text="Underweight: less than 18.5" />

    <TextView
        android:text="Overweight: between 25 and 29.9 "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/normal"
        android:layout_marginTop="23dp"
        android:id="@+id/overweight"
        android:layout_alignLeft="@+id/normal"
        android:layout_alignStart="@+id/normal" />

    <TextView
        android:text="Obese: 30 or greater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overweight"
        android:layout_alignRight="@+id/overweight"
        android:layout_alignEnd="@+id/overweight"
        android:layout_marginTop="26dp"
        android:id="@+id/obese"
        android:layout_alignLeft="@+id/overweight"
        android:layout_alignStart="@+id/overweight" />

    <TextView
        android:text="Normal: between 18.5 and 24.9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/normal"
        android:layout_below="@+id/underweight"
        android:layout_alignLeft="@+id/underweight"
        android:layout_alignStart="@+id/underweight" />

    <TextView
        android:text="YOUR SCORE:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/obese"
        android:layout_alignLeft="@+id/obese"
        android:layout_alignStart="@+id/obese"
        android:layout_marginTop="67dp"
        android:id="@+id/score_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/score_box"
        android:layout_alignBaseline="@+id/score_text"
        android:layout_alignBottom="@+id/score_text"
        android:layout_toRightOf="@+id/score_text"
        android:layout_toEndOf="@+id/score_text"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />
</RelativeLayout>
